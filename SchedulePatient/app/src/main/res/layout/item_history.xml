<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benh vien Viet Duc"
        android:textColor="@android:color/black"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/tvFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="khoa kham benh"
        android:layout_below="@+id/tvHospital"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFaculty"
        android:text="13:00"
        android:layout_marginTop="4dp"/>
   <Button
       android:id="@+id/btnAcept"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="4dp"
       android:textColor="@android:color/white"
       android:textSize="14sp"
       android:text="Chấp nhận"
       android:background="@drawable/background_press_primary"
       android:layout_alignParentRight="true"
       android:layout_marginTop="24dp"
       android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvAccepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã chấp nhận"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>


</RelativeLayout>